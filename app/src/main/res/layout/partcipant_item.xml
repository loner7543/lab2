<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/par_name"
        android:text="@string/par_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/par_nameVal"
        android:layout_toRightOf="@+id/par_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/par_desc"
        android:text="@string/par_desc"
        android:layout_below="@+id/par_nameVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/par_descVal"
        android:layout_toRightOf="@+id/par_desc"
        android:layout_below="@+id/par_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/par_desc" />

</RelativeLayout>